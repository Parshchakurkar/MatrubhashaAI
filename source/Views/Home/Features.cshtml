@{
    ViewBag.Title = "Features";
    Layout = "_Layout";
}

<div class="bg-gray-50 min-h-screen">
    <div class="container mx-auto px-4 py-12">
        <!-- Hero Section -->
        <section class="text-center mb-16">
            <h1 class="text-4xl font-bold text-indigo-700 mb-4">
                <i class="fas fa-star mr-2"></i> Matrubhasha AI Features
            </h1>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                Powerful translation tools designed specifically for Indian languages
            </p>
        </section>

        <!-- Main Features Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
            <!-- Feature 1 -->
            <div class="bg-white p-8 rounded-xl shadow-md hover:shadow-lg transition">
                <div class="text-indigo-600 text-4xl mb-4">
                    <i class="fas fa-language"></i>
                </div>
                <h3 class="text-xl font-bold mb-3">Multilingual Blog Translation</h3>
                <p class="text-gray-600">
                    Convert English blogs to Marathi, Hindi, Tamil and 10+ Indian languages with perfect context preservation.
                </p>
            </div>

            <!-- Feature 3 -->
            <div class="bg-white p-8 rounded-xl shadow-md hover:shadow-lg transition">
                <div class="text-green-600 text-4xl mb-4">
                    <i class="fas fa-brain"></i>
                </div>
                <h3 class="text-xl font-bold mb-3">Cultural Context AI</h3>
                <p class="text-gray-600">
                    Special algorithms that understand Indian idioms, proverbs and regional nuances.
                </p>
            </div>

            <!-- Feature 4 -->
            <div class="bg-white p-8 rounded-xl shadow-md hover:shadow-lg transition">
                <div class="text-purple-600 text-4xl mb-4">
                    <i class="fas fa-bolt"></i>
                </div>
                <h3 class="text-xl font-bold mb-3">Real-time Translation</h3>
                <p class="text-gray-600">
                    Get instant translations with our optimized AI engine (under 500ms response time).
                </p>
            </div>

            <!-- Feature 5 -->
            <div class="bg-white p-8 rounded-xl shadow-md hover:shadow-lg transition">
                <div class="text-red-500 text-4xl mb-4">
                    <i class="fas fa-lock"></i>
                </div>
                <h3 class="text-xl font-bold mb-3">Privacy Focused</h3>
                <p class="text-gray-600">
                    Your data never leaves India and is processed on secure Indian servers.
                </p>
            </div>

            <!-- Feature 6 -->
            <div class="bg-white p-8 rounded-xl shadow-md hover:shadow-lg transition">
                <div class="text-blue-500 text-4xl mb-4">
                    <i class="fas fa-users"></i>
                </div>
                <h3 class="text-xl font-bold mb-3">Collaboration Tools</h3>
                <p class="text-gray-600">
                    Share translations with team members and manage projects collaboratively.
                </p>
            </div>
        </div>

        <!-- CTA Section -->
        <section class="text-center bg-gradient-to-r from-indigo-600 to-purple-600 text-white rounded-xl p-8 shadow-lg">
            <h2 class="text-2xl font-bold mb-4">Ready to Transform Your Content?</h2>
            <p class="text-indigo-100 mb-6 max-w-2xl mx-auto">
                Join 5,000+ creators and businesses using Matrubhasha AI for authentic Indian language translations.
            </p>
            <a href="/Home/Index" class="inline-block bg-white text-indigo-700 px-6 py-3 rounded-full font-medium hover:bg-gray-100 transition">
                <i class="fas fa-play mr-2"></i> Try Live Demo
            </a>
        </section>
    </div>
</div>